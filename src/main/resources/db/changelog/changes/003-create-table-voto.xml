<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-table-voto" author="coop-votacao">
        <createTable tableName="voto">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_voto"/>
            </column>
            <column name="pauta_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="associado_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="data_hora" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="voto"
                baseColumnNames="pauta_id"
                constraintName="fk_voto_pauta"
                referencedTableName="pauta"
                referencedColumnNames="id"/>

        <addUniqueConstraint
                tableName="voto"
                columnNames="pauta_id, associado_id"
                constraintName="uk_voto_pauta_associado"/>
    </changeSet>

</databaseChangeLog>
