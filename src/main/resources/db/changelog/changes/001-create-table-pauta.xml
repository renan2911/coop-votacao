<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-table-pauta" author="coop-votacao">
        <createTable tableName="pauta">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_pauta"/>
            </column>
            <column name="titulo" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="data_criacao" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
